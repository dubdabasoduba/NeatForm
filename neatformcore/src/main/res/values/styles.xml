<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="labelStyle" parent="android:Widget.TextView">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/colorDark</item>
    <item name="android:textSize">@dimen/defaultTextSize</item>
    <item name="android:layout_marginBottom">@dimen/verticalMargin</item>
  </style>

  <style name="checkBoxStyle" parent="android:Widget.CompoundButton.CheckBox">
    <item name="android:textSize">@dimen/defaultTextSize</item>
    <item name="android:layout_marginStart">0dp</item>
    <item name="android:textColor">@color/colorBlack</item>
  </style>

  <style name="radioButtonStyle" parent="android:Widget.CompoundButton.RadioButton">
    <item name="android:textSize">@dimen/defaultTextSize</item>
    <item name="android:layout_marginStart">0dp</item>
    <item name="android:textColor">@color/colorBlack</item>
  </style>

  <style name="editTextStyle" parent="android:Widget.EditText">
    <item name="android:textSize">@dimen/defaultTextSize</item>
    <item name="android:layout_marginStart">0dp</item>
    <item name="android:paddingEnd">8dp</item>
    <item name="android:paddingStart">8dp</item>
  </style>

  <!-- Base application theme for Test -->
  <style name="CustomTestTheme" parent="Theme.AppCompat" />
</resources>